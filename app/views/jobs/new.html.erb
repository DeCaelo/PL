<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= render 'form'%>
        <h1>Liste des Postes</h1>
        <div class="row">
          <% @jobs.each do |job|%>
          <div class="job-flex">
            <div>
              <%= job.name %>
            </div>
              <%= link_to "Modifier", edit_job_path(job), class: "btn btn-medium" %>
              <%= link_to "Supprimer", job_path(job), method: :delete, data: {confirm: "are you sure?"}, class: "btn btn-medium" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
